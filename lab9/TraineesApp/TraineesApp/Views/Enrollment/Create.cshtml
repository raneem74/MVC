@model TraineesApp.Models.Enrollment

@{
    ViewData["Title"] = "Create";
    var TraineesList = new SelectList(ViewBag.trainees, "ID", "Name");
    var CoursesList = new SelectList(ViewBag.courses, "ID", "Topic");

}

<h1>Create</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TraineeID" class="control-label"></label>
                <select asp-for="TraineeID" class="form-control" asp-items="TraineesList"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourseID" class="control-label"></label>
                <select asp-for="CourseID" class="form-control" asp-items="CoursesList"></select>
            </div>
            <div class="form-group">
                <label asp-for="EnrolledDate" class="control-label"></label>
                <input asp-for="EnrolledDate" class="form-control" />
                <span asp-validation-for="EnrolledDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
